
<%- include('../includ/layout-start')%>

<main>
    <p class="h1" style="padding: 5px">Create book</p>
    <div class="container text">
        <div class="container text-center">
            <div class="row justify-content-md-center">
              <div class="col-sm-5">
                <form method="POST" class="mt-5">
                    <div class="form-group">
                        <label for="inputTitle">Название книги</label>
                        <input type="text"
                               value=""
                               name="title"
                               class="form-control"
                               id="inputTitle">
                    </div>
                    <div class="form-group">
                        <label for="inputDesc">Описание</label>
                        <textarea
                                rows="4"
                                name="description"
                                class="form-control"
                                id="inputDesc"
                        ></textarea>
                    </div>
                    <div class="form-group text-right ">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
              </div>
            </div>
          </div>
    </div>
</main>

<%- include('../includ/layout-end')%>